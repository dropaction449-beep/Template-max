ction updateCountdown() {\n    var now = new Date().getTime();\n    var endTime = getEndOfDayTimestamp();\n    var diff = endTime - now;\n\n    if (diff <= 0) {\n      endTime = getEndOfDayTimestamp();\n      diff = endTime - now;\n    }\n\n    var days = 0;\n    var hours = Math.floor(diff / (1000 * 60 * 60));\n    var minutes = Math.floor((diff / 1000 / 60) % 60);\n    var seconds = Math.floor((diff / 1000) % 60);\n\n    var timeValues = {\n      days: \"00\",\n      hours: String(hours).padStart(2, '0'),\n      minutes: String(minutes).padStart(2, '0'),\n      seconds: String(seconds).padStart(2, '0')\n    };\n\n    document.querySelectorAll('.hr-time-digit').forEach(function(digit) {\n      var unit = digit.getAttribute('data-unit');\n      var pos = parseInt(digit.getAttribute('data-position'));\n      digit.textContent = timeValues[unit][pos];\n    });\n  }\n\n  updateCountdown();\n  setInterval(updateCountdown, 1000);\n\n})();\n</script>\n\n</div>",
